        <view class='length'>04.02</view>
      </view>
    </view>
  </view>
  <view class='radio'>
    <view class='title'>视频作品</view>
    <view class='radio_works'>
      <view class='radio_box' bindtap='chooseVideo'>+</view>
      <view class='radio_box' bindtap='chooseVideo'>+</view>
      <view class='radio_box' bindtap='chooseVideo'>+</view>
    </view>
  </view>
