/* pages/request/means/means.wxss */
.means{
  width: 100%;
  height: 1206rpx;
  background: #1D1E34;
  overflow: hidden;
  font-family: "苹方";
}
.item{
  width: 100%;
  height: 268rpx;
  background: #2E2D4D;
  overflow: hidden;
  position: relative;
}
.left_img{
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin: 54rpx 58rpx 0 34rpx;
  float: left;
  overflow: hidden;
}
.left_img image{
  width: 100%;
  height: 100%;
}
.data{
  width: 300rpx;
  float: left;
  margin-top:54rpx;
}
.data .name{
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}
.tag{
  height: 28rpx;
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
}
.type{
  background: #CA8E1C;
}
.welfare{
  background: #676291;
}
.label{
  width: auto;
  padding: 0 20rpx;
  height: 28rpx;
  border-radius: 14rpx;
  color: #fff;
  font-family: "苹方";
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}
.id{
  font-size: 26rpx;
  color: #fff;
  margin-top: 10rpx;
}
.categorize{
  position: absolute;
  top:60rpx;
  right:42rpx;
  width: 90rpx;
  height: 122rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
.categorize image{
  width: 100%;
  height: 100%;
}
.categorize .title{
  position: absolute;
  top:62rpx;
  left:2rpx;
}
.price{
  width: 100%;
  height: 126rpx;
  background: #2E2D4D;
  border-bottom:2rpx solid #474672;
  border-top:2rpx solid #474672;
  margin-top: 22rpx;
  line-height: 126rpx;
  padding:0 28rpx;
}
.area{
  float: left;
  color: #fff;
  font-size: 32rpx;
}
.request{
  color: #CD0EF8;
  font-size: 28rpx;
  font-weight: bold;
  float: right;
  margin-right: 60rpx;
}
.demand{
  width: 100%;
  background: #2E2D4D;
  border-bottom:2rpx solid #474672;
  padding:40rpx 26rpx;
}
.content{
  font-size: 28rpx;
  color: #BDBDBD;
  margin-top: 50rpx;
  padding-right: 46rpx;
}
.address{
  width: 100%;
  height: 126rpx;
  background: #2E2D4D;
  line-height: 126rpx;
  padding-left: 28rpx;
}
.detailed{
  float: left;
  color: #BDBDBD;
  font-size: 28rpx;
  margin-left: 56rpx;
}
.time{
  width: 100%;
  height: 110rpx;
  background: #2E2D4D;
  padding-left: 28rpx;
  color: #8B8B8B;
  line-height: 110rpx;
  font-size: 28rpx;
  margin-top: 18rpx;
}
.communicate{
  width: 702rpx;
  height: 88rpx;
  background: linear-gradient(to right,#C10EFE,#8909FB);
  margin:0 auto;
  position: fixed;
  bottom: 94rpx;
  left:0;
  right:0;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 36rpx;
}