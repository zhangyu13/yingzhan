/* pages/request/resume/resume.wxss */
.resume{
  width: 100%;
  height: 100%;
  background: #1D1E34;
  overflow: hidden;
  font-family: "苹方";
}
.portrait{
  width: 100%;
  height: 250rpx;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
  position: relative;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}
.background image{
  width: 100%;
  height: 100%;
}
.covercolor{
  width: 100%;
  height: 100%;
  position: absolute;
  background: linear-gradient(to bottom,#C829FF,#468FFF);
  z-index: 2;
  opacity: 0.88;
}
.pic{
  width: 164rpx;
  height: 164rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin: auto;
  z-index: 3;
}
.pic image{
  width: 100%;
  height: 100%;
}
.list{
  width: 100%;
  height: 112rpx;
  border: 1rpx solid #3A3A3A;
  color: #fff;
  font-size: 30rpx;
  /* font-family: "苹方"; */
  text-align: left;
  line-height: 112rpx;
  position: relative;
  overflow: hidden;
}
.bind{
  color: #CD0EF8;
  font-size: 30rpx;
  float: right;
  margin-right: 28rpx;
}
.area{
  float: left;
  margin-left:30rpx;
}
.list input{
  float: right;
  margin-right: 28rpx;
  text-align: right;
  cursor: pointer;
  margin-top: 30rpx;
}
.more{
  text-align: right;
  padding-right: 80rpx;
  box-sizing: border-box;
}
.more image{
  width: 20rpx;
  height: 32rpx;
  position: absolute;
  top:0;
  bottom: 0;
  margin: auto 0;
  right:28rpx;
}
.notice{
  position: absolute;
  top:0;
  bottom:0;
  margin: auto 0;
  right:32rpx;
  width: 82rpx;
  height: 42rpx;
  background: #BC0EFE;
  border-radius: 40rpx;
}
.slide{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top:0;
  right:0;
  bottom:0;
  margin: auto 0;
}
.tag_box .title{
  margin-top: 38rpx;
  margin-left: 0;
  color: #fff;
  font-size: 30rpx;
}
.tag_box{
  width: 100%;
  height: 120rpx;
  margin-top: 22rpx;
  padding:0 36rpx;
  box-sizing: border-box;
}
.label{
  width: 144rpx;
  height: 60rpx;
  border:1rpx solid #BDBDBD;
  color: #BDBDBD;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  float: left;
  margin-right: 20rpx;
  border-radius: 30rpx;
  margin-top: 22rpx;
}
.customlabel{
  width: 144rpx;
  height: 60rpx;
  border:1rpx solid #BDBDBD;
  color: #BDBDBD;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  float: left;
  margin-right: 20rpx;
  border-radius: 30rpx;
  margin-top: 22rpx;
  padding:0 6rpx 0 30rpx;
  position: relative;
}
.customlabel image{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top:0;
  bottom:0;
  left: 20rpx;
  margin: auto 0;
}
.active{
  background: #CD0EF8;
  color: #fff;
  border:1rpx solid #CD0EF8;
}
.addcustom{
  width: 126rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #2E2D4D;
  color: #CD0EF8;
  font-size: 46rpx;
  float: left;
  text-align: center;
  line-height: 60rpx;
  margin-top: 22rpx;
}
.save{
  width: 702rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  margin: 76rpx auto 62rpx;
  background: linear-gradient(to right,#C10EFE,#8909FB);
  border-radius: 44rpx;
  color: #fff;
  font-size: 36rpx;
}