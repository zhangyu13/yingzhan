/* pages/person/person.wxss */
.person{
  width: 100%;
  height: 100%;
  background: #1D1E34;
  overflow: hidden;
}
.person_top{
  width: 100%;
  height: 262rpx;
  position: relative;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}
.background image{
  width: 100%;
  height: 100%;
}
.covercolor{
  width: 100%;
  height: 100%;
  position: absolute;
  background: linear-gradient(to bottom,#C829FF,#468FFF);
  z-index: 2;
  opacity: 0.88;
}
.person_img{
  width: 100%;
  height: 100%;
}
.person_pic{
  width: 164rpx;
  height: 164rpx;
  position: absolute;
  top:48rpx;
  left:32rpx;
  z-index: 3;
}
.vip_img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:112rpx;
  left:96rpx;
  z-index: 3;
}
.information{
  position: absolute;
  top:62rpx;
  left:232rpx;
  z-index: 3;
}
.username{
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  font-family: "苹方";
}
.username image{
  width: 30rpx;
  height: 30rpx;
}
.tag{
  height: 28rpx;
  margin-top: 20rpx;
}
.label{
  float: left;
  padding:0 12rpx;
  height: 28rpx;
  border-radius: 14rpx;
  color: #fff;
  font-family: "苹方";
  font-size: 20rpx;
  background: #9A03B2;
  text-align: center;
  line-height: 28rpx;
  margin-right: 8rpx;
}
.person_id{
  display: block;
  color: #fff;
  font-size: 26rpx;
  font-family: "苹方";
  margin-top: 19rpx;
}
.more{
  width: 24rpx;
  height: 42rpx;
  position: absolute;
  top:40rpx;
  right:-200rpx;
}
.person_center{
  width: 100%;
  height: 847rpx;
  padding-left: 30rpx;
}
.content{
  width: calc(100% - 30rpx);
  height: 116rpx;
  border-bottom: 1px solid #3A3A3A;
  position: relative;
}
.list_imgl{
  position: absolute;
  left:0;
  top:0;
  bottom:0;
  margin: auto 0;
  width: 42rpx;
  height: 38rpx;
}
.resume .list_imgl{
  width: 32rpx;
  height: 42rpx;
  margin-left: 4rpx;
}
.list{
  position: absolute;
  top:0;
  left:84rpx;
  line-height: 118rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: normal;
  font-family: "苹方";
}
.list_imgr{
  width: 20rpx;
  height: 32rpx;
  position: absolute;
  top:42rpx;
  right:30rpx;
}
.tab{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: #2E2D4D;
  display: flex;
  justify-content: space-around;
}
.tab .tab-list{
  color: #8F8F8F;
  text-align: center;
  font-size: 20rpx;
}
.tab-list .img-box{
  width: 46rpx;
  height: 50rpx;
  margin-top: 12rpx;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.tab-list .explain{
  margin-top: 4rpx;
}
.tab-list:nth-child(4){
  color: #BC0EFE;
}
.active{
  color: #BC0EFE;
}