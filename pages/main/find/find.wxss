.find{
  width: 100%;
  padding:22rpx 0 28rpx;
  height: 60rpx;
  position: fixed;
  top:0;
  left:0;
  z-index: 3;
  background: #1D1E34;
}
.find input{
  width: 622rpx;
  height: 100%;
  border-radius: 30rpx;
  padding:0 0 0 54rpx;
  background: #EEEEEE;
  font-size: 24rpx;
  color: #B6B6B6;
  box-sizing: border-box;
  margin-left: 30rpx;
}
.find image{
  position: absolute;
  top:40rpx;
  left:46rpx;
  width: 24rpx;
  height: 24rpx;
}
.empty{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #C8C8C8;
  color: #fff;
  position: absolute;
  top:40rpx;
  right:110rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}
.cancel{
  color: #BDBDBD;
  font-size: 28rpx;
  position: absolute;
  top:28rpx;
  right: 24rpx;
}
.tab{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background: #2E2D4D;
  display: flex;
  justify-content: space-around;
}
.tab .tab-list{
  color: #8F8F8F;
  text-align: center;
  font-size: 20rpx;
}
.tab-list .img-box{
  width: 46rpx;
  height: 50rpx;
  margin-top: 12rpx;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.tab-list .explain{
  margin-top: 4rpx;
}
.active{
  color: #BC0EFE;
}
map{
  margin-top: 110rpx;
  width: 100%; 
  height: 1006rpx;
}
.information{
  width: 100%;
  height: 296rpx;
  position: fixed;
  bottom: 134rpx;
  left: 0;
  background: #1D1E34;
  border-radius: 20rpx;
  z-index: 10;
}
.left_img{
  width: 166rpx;
  height: 166rpx;
  position: absolute;
  top:64rpx;
  left:30rpx;
}
.left_img .img{
  width: 100%;
  height: 100%;
}
.type{
  width: 76rpx;
  height: 28rpx;
  position: absolute;
  top:64rpx;
  left: 122rpx;
}
.type .img{
  width: 100%;
  height: 100%;
}
.data{
  position: absolute;
  top:72rpx;
  left: 228rpx;
}
.data .name{
  font-size: 36rpx;
  color: #F1F1F3;
  float: left;
}
.data .recruit .write{
  float: left;
  font-size: 24rpx;
  color: #D30EFE;
  margin-top: 6rpx;
  height: 34rpx;
  line-height: 34rpx;
}
.data .recruit .img{
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  float: left;
  margin-left: 32rpx;
  margin-top: 4rpx;
}
.data .address{
  margin-top: 20rpx;
  height: 34rpx;
  padding-left: 26rpx;
  position: relative;
}
.data .address .addr{
  font-size: 28rpx;
  color: #BDBDBD;
}
.data .address .img{
  width: 20rpx;
  height: 32rpx;
  position: absolute;
  top:0;
  left: 0;
}
.label{
  margin-right: 8rpx;
  padding:0 16rpx;
  background: #CD0EF8;
  height: 34rpx;
  border-radius: 16rpx;
  float: left;
  color: #fff;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.more{
  width: 24rpx;
  height: 42rpx;
  position: absolute;
  right: 32rpx;
  bottom: 0;
  top:0;
  margin: auto 0;
}
.more .img{
  width: 100%;
  height: 100%;
}

