/* pages/recruit/preview/preview.wxss */
.preview{
  width: 100%;
  height: 1206rpx;
  background: #1D1E34;
  overflow: hidden;
  font-family: "苹方";
}
.portrait{
  width: 100%;
  height: 250rpx;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
  position: relative;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}
.background image{
  width: 100%;
  height: 100%;
}
.covercolor{
  width: 100%;
  height: 100%;
  position: absolute;
  background: linear-gradient(to bottom,#C829FF,#468FFF);
  z-index: 2;
  opacity: 0.88;
}
.pic{
  width: 164rpx;
  height: 164rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top:46rpx;
  left:34rpx;
  z-index: 3;
}
.pic image{
  width: 100%;
  height: 100%;
}
.news{
  width: 380rpx;
  height: 200rpx;
  position: absolute;
  top:60rpx;
  left:250rpx;
  z-index: 3;
}
.name{
  color: #fff;
  font-weight: bold;
  font-size: 40rpx;
}
.name image{
  width: 32rpx;
  height: 32rpx;
}
.experience{
  color: #fff;
  font-weight: normal;
  font-size: 28rpx;
}
.type{
  padding:0 20rpx;
  height: 26rpx;
  border-radius: 16rpx;
  background: #9A03B2;
  color: #fff;
  font-size: 20rpx;
  float: left;
  margin-top: 4rpx;
}
.report{
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  top:18rpx;
  right: 24rpx;
  z-index: 3;
}
.report image{
  width: 100%;
  height: 100%;
}
