/* pages/recruit/latest/latest.wxss */
.latest{
  width: 100%;
  height: 1206rpx;
  background: #1D1E34;
  overflow: hidden;
  font-family: "苹方";
}
.pic,.position,.money,.address{
  border-bottom: 1rpx solid #3A3A3A;
  padding: 0 36rpx;
  box-sizing: border-box;
  position: relative;
}
.pic{
  height: 164rpx;
}
.pic .pic_img{
  width: 106rpx;
  height: 106rpx;
  position: absolute;
  top:30rpx;
  right: 36rpx;
  border-radius: 50%;
  overflow: hidden;
}
.pic .pic_img image{
  width: 100%;
  height: 100%;
}
.title{
  font-size: 30rpx;
  color: #fff;
  line-height: 120rpx;
}
.pic .title{
  line-height: 164rpx;
}
.position,.money,.address{
  height: 120rpx;
}
.more{
  width: 20rpx;
  height: 32rpx;
  position: absolute;
  top:40rpx;
  right: 36rpx;
}
.more image{
  width: 100%;
  height: 100%;
}
.write{
  position: absolute;
  top:40rpx;
  right: 36rpx;
}
.write input{
  width: 600rpx;
  text-align: right;
  font-size: 30rpx;
  margin-right: 30rpx;
}
.write image{
  width: 24rpx;
  height: 38rpx;
  position: absolute;
  top:8rpx;
  right: 0;
}
.publish_job{
  width: 702rpx;
  height: 88rpx;
  background: linear-gradient(to right,#C10EFE,#8909FB);
  font-size: 36rpx;
  color:#fff;
  text-align: center;
  line-height: 88rpx;
  border-radius: 44rpx;
  position: fixed;
  bottom:58rpx;
  left:0;
  right: 0;
  margin:0 auto;
}