/* pages/main/select/select.wxss */
.select{
  width: 100%;
  height: 1206rpx;
  background: #1D1E34;
  overflow: hidden;
}
.pic{
  width: 280rpx;
  height: 280rpx;
  margin:40rpx auto 40rpx;
}
.pic image{
  width: 100%;
  height: 100%;
}
.option{
  width: 464rpx;
  height: 90rpx;
  margin:0 auto;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  background: linear-gradient(to right,#C10EFE,#8909FB);
  border-radius: 45rpx;
}
.or{
  font-size: 26rpx;
  color: #BDBDBD;
  text-align: center;
  width: 100%;
  position: relative;
  margin: 112rpx 0;
}
.or image{
  width: 622rpx;
  height: 4rpx;
  margin:0 auto;
  position: absolute;
  top:16rpx;
  left:0;
  right:0;
}